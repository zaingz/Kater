<% if @deal%>
<%= simple_form_for(@deal) do |f| %>
  <% if @deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
      <% @deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>

    <%= f.hidden_field :pico_cache %>
    <%= f.input :pico , as: :file, :label => "Picture" %>

    <%= f.association :food_items, collection: current_user.catering_company.food_items, input_html: { class: 'multiselectuser'}%>
    

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Deal" %>
  </div>
<% end %>
<% end %>