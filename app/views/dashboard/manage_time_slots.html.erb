  <%= render '/dashboard/manger_sidebar'%>

  <div style="margin-top: 95px;" id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            Dashboard <small>Admin Panel</small>
          </h1>
          <ol class="breadcrumb">
            <li class="active">
              <i class="fa fa-dashboard"></i> Dashboard / Time Slots
            </li>
          </ol>
        </div>
      </div>
      <!-- /.row -->
      <style>
          .full_btn{
              margin-bottom: 20px; width: 100%;background: #c6c601;
              border-color: #c6c601;


              color: #fff;
              font-size: 18px;
              font-weight: 400;
              margin-right: 4%;
              text-transform: uppercase;
          }
           .full_btn:hover{
              margin-bottom: 20px; width: 100%;background: #c6c601;
              border-color: #c6c601;


              color: #fff;
              font-size: 18px;
              font-weight: 400;
              margin-right: 4%;
              text-transform: uppercase;
          }
            .full_btn:active{
              margin-bottom: 20px; width: 100%;background: #c6c601;
              border-color: #c6c601;


              color: #fff;
              font-size: 18px;
              font-weight: 400;
              margin-right: 4%;
              text-transform: uppercase;
          }
      </style>
      <button class="btn btn-lg full_btn"  type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Manage your time slots
      </button>
      <div class="clearfix"></div>
      <div class="collapse" id="collapseExample">
        <div class="">

          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
              <tr>

                <th>#</th>
                <th>Name</th>

                <th>Start Time</th>
                <th>End Time</th>

                <th>Delete</th>
              </tr>
              </thead>



              <tbody>
              <% if current_user.catering_company%>
              <% current_user.catering_company.time_slots.each_with_index do |deal, index| %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><%= deal.tittle %></span></td>
                    <td><%= deal.start_time %></td>

                    <td><%= deal.end_time %></td>

                    <td><%= link_to( raw('<span class="fa fa-trash-o" />'), {controller: "time_slots", action: "destroy", id: deal.id}, method: :delete, data: { confirm: "You sure?" }) %></td>

                  </tr>
              <%end %>
              <%end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>







      <%= render "create_time_slots" %>

    </div>
  </div>








