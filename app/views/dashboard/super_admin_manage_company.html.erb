  <%= render '/dashboard/admin_sidebar'%>


  <div style="margin-top: 95px;" id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">
              Dashboard <small>Admin Panel</small>
            </h1>
            <ol class="breadcrumb">
              <li class="active">
                <i class="fa fa-dashboard"></i> Dashboard / Catering Company
              </li>
            </ol>
          </div>
        </div>
        <!-- /.row -->


        <hr>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Number Of Employes</th>
                <th>Address</th>
                <th>Contact Number</th>
                <th>Delete</th>
              </tr>
            </thead>

            

            <tbody>
              <% @c_company.each_with_index do |comp, index| %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= image_tag(comp.pico_url(:thumbnail), :width => 50, :height => 50, class: 'img-thumbnail') %><span style="padding-top: 10px;padding-left: 10px;"><%= comp.name  %></span> </td>

                  <td><%= comp.number_of_employes %></td>
                  <td><%= comp.address %></td>
                  <td><%= comp.contact_number %></td>

                  <td><%= link_to( raw('<span class="fa fa-trash-o" />'), {controller: "dashboard", action: "destroy_comp", id: comp.id}, method: :delete, data: { confirm: "You sure?" }) %></td>
                  
                </tr>
              <%end %>
            </tbody>
          </table>
        </div>


    </div>
  </div>








