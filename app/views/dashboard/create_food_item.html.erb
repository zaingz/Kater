  <%= render '/dashboard/manger_sidebar'%>

  <div style="margin-top: 95px;" id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">
              Dashboard <small>Admin Panel</small>
            </h1>
            <ol class="breadcrumb">
              <li class="active">
                <i class="fa fa-dashboard"></i> Dashboard / Food Item
              </li>
            </ol>
          </div>
        </div>
        <!-- /.row -->

        <!---->


      <style>


          #z_btn{
      margin-bottom: 20px; width: 100%;background: #c6c601;
      border-color: #c6c601;


     color: #fff;
      font-size: 18px;
      font-weight: 400;
      margin-right: 4%;
      text-transform: uppercase;
  }
#z_btn:hover{
      margin-bottom: 20px; width: 100%;background: #c6c601;
      border-color: #c6c601;


     color: #fff;
      font-size: 18px;
      font-weight: 400;
      margin-right: 4%;
      text-transform: uppercase;
  }

      </style>
          
        <button id="z_btn" class="btn btn-lg"  type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Manage items
        </button>
        <div class="clearfix"></div>
        <div class="collapse" id="collapseExample">
          <div class="">

            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                <tr>
                  <th style="text-align: center;">#</th>
                  <th style="text-align: center;">Name</th>
                  <th style="text-align: center;">Description</th>
                  <th style="text-align: center;">Price</th>
                  <th style="text-align: center;">Edit</th>
                  <th style="text-align: center;">Delete</th>
                </tr>
                </thead>



                <tbody>
                <% @all_food_items.each_with_index do |item, index| %>
                    <tr>
                      <td style="text-align: center;"><%= index+1 %></td>
                      <td style="text-align: center;"><%= image_tag(item.pico_url(:standard), class: 'img-thumbnail') %><span style="margin-left: 5px"><%= item.name %></span></td>
                      <td style="text-align: center;"><%= item.description %></td>
                      <td style="text-align: center;"><%= item.price %></td>

                      <td style="text-align: center;"><%= link_to( raw('<span class="fa fa-pencil" />'), edit_food_item_path(item.id) ) %></td>
                      <td style="text-align: center;"><%= link_to( raw('<span class="fa fa-trash-o" />'), {controller: "dashboard", action: "delete_food_item", id: item.id}, method: :delete, data: { confirm: "You sure?" }) %></td>

                    </tr>
                <%end %>
                </tbody>
              </table>
            </div>
            
          </div>
        </div>
        
        <hr>

      <%= render "/dashboard/create_food_item_form" %>



        
