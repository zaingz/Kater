            <button class="btn btn-lg full_btn btn"  type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              Manage Deal
            </button>


        <div class="clearfix"></div>
        <div class="collapse" id="collapseExample">
          <div class="">

            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                <tr>

                  <th>#</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Food Items</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
                </thead>



                <tbody>
                <% if @deals%>
                <% @deals.each_with_index do |deal, index| %>
                    <tr>
                      <td><%= index+1 %></td>
                      <td><%= image_tag(deal.pico_url(:standard), class: 'img-thumbnail') %><span style="margin-left: 5px"><%= deal.name %></span></td>
                      <td><%= deal.description %></td>

                      <td><%= deal.price %></td>
                      <td>
                        <% if deal.food_items%>
                            <% deal.food_items.each do |f|%>
                                <span><%= f.name%></span>
                            <%end%>
                        <%end%>
                      </td>
                      <td><%= link_to( raw('<span class="fa fa-pencil" />'), edit_deal_path(deal.id) ) %></td>
                      <td><%= link_to( raw('<span class="fa fa-trash-o" />'), {controller: "dashboard", action: "delete_deal", id: deal.id}, method: :delete, data: { confirm: "You sure?" }) %></td>

                    </tr>
                <%end %>
                <%end %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
        
        <hr>


      <%= render "/deals/form" %>
        
